# Production Environment Variables for Vercel
# Copy these values to Vercel dashboard

# Database (use a production PostgreSQL service like Neon, Supabase, or Railway)
DATABASE_URL="postgresql://user:password@host:port/database"

# NextAuth.js
NEXTAUTH_URL="https://skoot.bike"
NEXTAUTH_SECRET="your-long-random-secret-key-for-production-at-least-32-characters"

# Stripe (get from Stripe dashboard)
STRIPE_PUBLIC_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (use a service like SendGrid, Mailgun, or AWS SES)
EMAIL_SERVER_HOST="smtp.sendgrid.net"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="apikey"
EMAIL_SERVER_PASSWORD="your-sendgrid-api-key"
EMAIL_FROM="hello@skoot.bike"

# App Configuration
NEXT_PUBLIC_APP_URL="https://skoot.bike"
ADMIN_EMAIL="hello@skoot.bike"

# Cloudinary (for image uploads - get from Cloudinary dashboard)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"